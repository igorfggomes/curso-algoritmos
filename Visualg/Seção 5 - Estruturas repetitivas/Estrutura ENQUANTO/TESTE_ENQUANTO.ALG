Algoritmo "teste_enquanto"

Var
   x: inteiro
   soma: inteiro

Inicio
   escreva("Digite o primeiro número: ")
   leia(x)
   
   soma <- 0
   enquanto x<>0 faca
      soma <- soma + x
      escreva("Digite outro número: ")
      leia(x)
   fimenquanto
   
   escreva("O resultado da soma dos números é: ", soma)

Fimalgoritmo